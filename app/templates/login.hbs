<article class="container container-fill-height">
    <div class="container container-content-middle">
        <div class="jumbotron">
            <h1>Dezik</h1>
            <p>le backo qui envoie du chien</p>
            <form class="text-xs-center">
              {{#if error}}
                {{#ck-alert type='danger' dismissible=true}}{{error}}{{/ck-alert}}
              {{/if}}
                <div class="form-group {{domainStatus}}">
                    <div class="input-group">
                        <span class="input-group-addon">https://</span>
                      {{input type='text' disabled=pending value=domain placeholder='Backend name' class='form-control'}}
                        <span class="input-group-addon">.spacedog.io</span>
                    </div>
                </div>
                <div class="form-group {{loginStatus}}">
                    <div class="input-group">
                        <span class="input-group-addon">Login:</span>
                      {{input type='text' disabled=pending value=user placeholder='Login' class='form-control'}}
                    </div>
                </div>
                <div class="form-group {{passwordStatus}}">
                    <div class="input-group">
                        <span class="input-group-addon">Password:</span>
                      {{input type='password' disabled=pending value=password placeholder='Password' class='form-control'}}
                    </div>

                </div>
              {{#ck-button action="signIn" id="frum" type="primary" size="large" disabled=disabled}}
                {{ck-icon icon="dog" collection="icon"}}{{message}}
              {{/ck-button}}

            </form>
        </div>
    </div>
</article>
