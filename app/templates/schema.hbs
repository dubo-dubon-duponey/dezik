<h3>Schema editor</h3>
<div class="container-inner">
    <div class="row">

        <div>
          {{#unless items}}
              <p>No models yet!</p>
          {{/unless}}

            <ul class="list-unstyled">
              {{#each items as |item|}}
                  <li class="model-list-item">
                      <div class="panel panel-default">
                          <div class="panel-heading">
                              <h3 class="panel-title">
                                {{item.id}}
                                  <button type="button" {{action "removeModel" item}} class="btn btn-danger pull-right btn-xs"><span>Delete</span></button>
                                  <button type="button" {{action "saveModel" item}} class="btn btn-xs btn-success pull-right" disabled={{if item.dirty "" "disabled"}}><span>Save</span></button>
                              </h3>
                          </div>

                          <div class="panel-body">
                              <ul class="list-unstyled">
                                {{#each item.fields as |field|}}
                                    <hr />
                                    <li class="row">
                                      {{model-field field=field modelList=list update="updateFields"}}
                                    </li>
                                {{else}}
                                    <li>
                                        <p class="text-warning">No model attributes. Try using the 'Add Field' button below.</p>
                                    </li>
                                {{/each}}
                              </ul>
                          </div>

                          <div class="panel-footer">
                              <button type="button" {{action "newField" item}} class="btn btn-sm btn-block btn-primary">&plus; Add Field</button>
                          </div>
                      </div>
                  </li>
              {{/each}}

              {{model-new save=(action 'newModel')}}
            </ul>
        </div>
    </div>
</div>
